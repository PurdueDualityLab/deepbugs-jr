	number = {2},
	urldate = {2020-10-25},
	journal = {Machine Vision and Applications},
	author = {Mittal, Deepak and Bhardwaj, Shweta and Khapra, Mitesh M. and Ravindran, Balaraman},
	month = mar,
	year = {2019},
	pages = {203--216},
}

@article{zagoruyko_wide_2017,
