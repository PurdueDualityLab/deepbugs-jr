	month = oct,
	year = {2020},
	keywords = {Low-power, image classification},
	pages = {1:1--1:35},
}

@article{courbariaux_binarized_2016,
	title = {Binarized {Neural} {Networks}: {Training} {Deep} {Neural} {Networks} with {Weights} and {Activations} {Constrained} to +1 or -1},
